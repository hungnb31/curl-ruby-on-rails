<div class="bg-light p-5 border">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field from-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email" %>
    </div>

    <div class="field from-group">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3", placeholder:"Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field from-group">
        <%= f.check_box :remember_me, class:"form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary my-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>